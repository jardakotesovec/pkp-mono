			<col>article_id</col>
		</index>
		<index name="review_assignments_reviewer_id">
			<col>reviewer_id</col>
		</index>
	</table>
	
	<!--
	  *
	  * TABLE site
	  *
	  -->
	<table name="site">
		<field name="title" type="C2" size="120">
			<NOTNULL />
			<DEFAULT VALUE="Open Monograph Press"/>
		</field>
