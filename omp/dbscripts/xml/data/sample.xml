<data>
	<table name="site">
		<row>
			<field name="title">My Site</field>
			<field name="intro">Welcome to my site.</field>
			<field name="press_redirect">0</field>
			<field name="about">About my site.</field>
		</row>
	</table>
	
	<table name="presses">
		<row>
			<field name="title">Press 1</field>
			<field name="path">omp1</field>
			<field name="seq">1</field>
		</row>
		<row>
			<field name="title">Press 2</field>
			<field name="path">omp2</field>
			<field name="seq">2</field>
		</row>
	</table>
	
	<sql>
		<query>UPDATE presses SET seq = press_id</query>
	</sql>
</data>
