<plugin_settings>
	<setting type="bool">
		<name>enabled</name>
		<value>false</value>
	</setting>
	
	<!-- Search Handler Configuration -->
	<setting type="string">
		<name>searchEndpoint</name>
		<value>http://localhost:8983/solr/ojs/search</value>
	</setting>
	<setting type="string">
		<name>username</name>
		<value>admin</value>
	</setting>
	<setting type="string">
		<name>password</name>
		<value>please change</value>
	</setting>
	<setting type="string">
		<name>instId</name>
		<value>localhost</value>
	</setting>
	
	<!-- Email Timestamp to avoid DoS/Spam attacks -->
	<setting type="int">
		<name>lastEmailTimestamp</name>
		<value>0</value>
	</setting>
	
	<!-- Search Features -->
	<setting type="bool">
		<name>autosuggest</name>
		<value>true</value>
	</setting>
	<setting type="int">
		<name>autosuggestType</name>
		<value>2</value> <!-- Default: Use faceting for auto-suggest. -->
	</setting>
	<setting type="bool">
		<name>spellcheck</name>
		<value>true</value>
	</setting>
</plugin_settings>

